{
  "name": "melos-flow-backend",
  "version": "0.0.1",
  "description": "Contains the flow event scanning service, sending events to AWS SQS; and the flow event hanlding service.",
  "author": "Pure-Peace",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prod-run-api": "nest build web-api && node dist/apps/web-api/main",
    "prod-run-scanner": "nest build block-scanner && node dist/apps/block-scanner/main",
    "prod-run-event-handler": "nest build event-handler && node dist/apps/event-handler/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/block-scanner/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.112.0",
    "@melosstudio/flow-sdk": "1.1.4",
    "@nestjs/axios": "^0.0.7",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/swagger": "^5.2.0",
    "@onflow/fcl": "^0.0.79-alpha.4",
    "@onflow/sdk": "0.0.44",
    "@prisma/client": "^3.10.0",
    "@typegoose/typegoose": "^9.7.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.2.6",
    "mongoose-paginate-v2": "^1.6.3",
    "nestjs-typegoose": "^7.1.38",
    "number-precision": "^1.5.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.180",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@MelosFlow/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@MelosFlow/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@MelosFlow/db(|/.*)$": "<rootDir>/libs/db/src/$1",
      "^@MelosFlow/type(|/.*)$": "<rootDir>/libs/type/src/$1"
    }
  }
}
